{
  "name": "viewportjs",
  "version": "3.0.0-canary.1",
  "description": "ViewportJS is built on top of `window.matchMedia` and provides valuable features that enable more structure when querying and subscribing to media queries.",
  "author": "Ryan Fitzer",
  "readmeFilename": "readme.md",
  "license": "MIT",
  "main": "index.js",
  "unpkg": "./dist/viewport.min.js",
  "contributors": [
    "Derek Pittsinger (http://derekpitt.com)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ryanfitzer/ViewportJS.git"
  },
  "scripts": {
    "build": "npm run toc && rm -rf ./dist && grunt --verbose",
    "checkpkg": "npm pack && tar -xvzf *.tgz && rm -rf package *.tgz",
    "test": "open ./tests/index.html &",
    "test:ff": "open -a 'Firefox' './tests/index.html'",
    "test:safari": "open -a 'Safari' ./tests/index.html",
    "test:chrome": "open -a 'Google Chrome' ./tests/index.html",
    "toc": "doctoc README.md --github"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "index.js"
  ],
  "devDependencies": {
    "chai": "^4.2.0",
    "doctoc": "^1.4.0",
    "eslint": "^5.12.0",
    "eslint-plugin-compat": "^2.6.3",
    "grunt": "^1.0.3",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-uglify": "^4.0.0",
    "mocha": "^5.2.0"
  }
}
