{
  "name": "viewportjs",
  "version": "2.1.0",
  "description": "ViewportJS is an API on top of `window.matchMedia` that gives more structure to subscribing and querying viewports.",
  "author": "Ryan Fitzer",
  "readmeFilename": "readme.md",
  "license": "MIT",
  "main": "viewport.js",
  "unpkg": "./dist/viewport.min.js",
  "contributors": [
    "Derek Pittsinger (http://derekpitt.com)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ryanfitzer/ViewportJS.git"
  },
  "scripts": {
    "build": "grunt --verbose",
    "checkpkg": "npm pack && tar -xvzf *.tgz && rm -rf package *.tgz",
    "test": "open ./tests/index.html &",
    "test:ff": "open -a 'Firefox' './tests/index.html'",
    "test:safari": "open -a 'Safari' ./tests/index.html",
    "test:chrome": "open -a 'Google Chrome' ./tests/index.html"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "viewport.js"
  ],
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.12.0",
    "eslint-plugin-compat": "^2.6.3",
    "grunt": "^1.0.3",
    "grunt-contrib-uglify": "^4.0.0",
    "mocha": "^5.2.0"
  }
}
